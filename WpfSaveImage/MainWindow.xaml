<Window x:Class="WpfSaveImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSaveImage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border BorderThickness="1" BorderBrush="#70000000" Margin="2" Padding="0">
                    <Border Style="{StaticResource BorderAlignView}" Background="{Binding StateColor}" Margin="0">
                        <TextBlock Style="{StaticResource TextAlignHeader}" Text="{Binding AlignTitle}"></TextBlock>
                    </Border>
                </Border>
            </Grid>
            <Grid Grid.Row="1">
                <Border BorderThickness="1" BorderBrush="#70000000" Margin="2" Padding="0">
                    <Grid Background="Gray" Margin="0">
                        <Image Source="{Binding Image}"/>
                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border Background="Black" Padding="5" Margin="2">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource TextAlignResult}" 
                                       Text="{Binding TextTactime}"
                                       FontSize="15" Margin="0,0"></TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <Border Background="Black" Padding="5" Margin="2">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource TextAlignResult}" 
                                       Text="{Binding TextSaveImage}"
                                       Margin="0,0,0,-1.6"></TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Row="3">
                <UniformGrid Columns="3">
                    <Button Style="{StaticResource ButtonFlowAlignView}" Command="{Binding LiveCommand}" >NONE</Button>
                    <Button Style="{StaticResource ButtonFlowAlignView}" Command="{Binding TriggerCommand}">TRIGGER</Button>
                    <Button Style="{StaticResource ButtonFlowAlignView}" Command="{Binding SaveImageCommand}" >SAVE IMAGE</Button>
                </UniformGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>
