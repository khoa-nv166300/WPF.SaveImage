<Window x:Class="WPF.SaveImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.SaveImage"
        mc:Ignorable="d"
       Title="Basler Camera App" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Image Source="{Binding Image}" Stretch="Uniform" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Content="Live" Command="{Binding LiveCommand}" Margin="10"/>
            <Button Content="Trigger" Command="{Binding TriggerCommand}" Margin="10"/>
            <Button Content="Save Image" Command="{Binding SaveImageCommand}" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
